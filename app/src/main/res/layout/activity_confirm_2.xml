<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enter the second password"
        android:textColor="#31FF00"
        android:textSize="25sp"
        android:fontFamily="@font/dossaemmul"
        android:gravity="center" />

    <EditText
        android:id="@+id/confirm2SecPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#31FF00"
        android:textColorHint="#31FF00"
        android:hint="&quot;&quot;"
        android:textSize="30sp"
        android:fontFamily="@font/dossaemmul"
        android:gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>

    <!--<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Into the silence of faith"
        android:textColor="#458A34"
        android:textSize="25sp"
        android:fontFamily="@font/dossaemmul"
        android:gravity="center"
        android:layout_marginTop="50dp"/>
</LinearLayout>